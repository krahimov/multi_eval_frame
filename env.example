# Copy this file to .env.local and fill in your values.

# Required: Postgres connection string.
# NeonDB example: postgres://user:pass@ep-xxx.us-east-2.aws.neon.tech/dbname?sslmode=require
DATABASE_URL=

# Optional: API listen port (default 3001)
PORT=3001

# Optional: If set, requests must include X-API-Key header with this value.
EVAL_API_KEY=

# Optional: OpenAI key for `npm run demo:agent` live LLM calls.
OPENAI_API_KEY=

# Optional: OpenTelemetry collector endpoint (e.g. http://localhost:4318/v1/traces)
OTLP_ENDPOINT=

# Optional: Force Postgres SSL even if URL doesn't include sslmode=require.
# Typically not needed for NeonDB URLs (auto-detected).
PG_SSL=

